{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": "error",
        "brace-style": "error",
        "no-extra-semi": "error",
        "no-irregular-whitespace": "error",
        "no-multi-spaces": "error",
        "space-before-function-paren": [
        "error",
        "never"
        ],
        "array-bracket-spacing": [
          "error",
          "never"
        ],
        "eol-last": [
          "error",
          "always"
        ]
    }
}
